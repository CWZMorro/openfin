{
  "name": "OpenFin",
  "description": "Take back your financial data.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "dist/index.html",
    "default_icon": "src/chrome/openfin.png"
  },
  "background": {
    "service_worker": "dist/chrome/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "dist/chrome/content.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "js": [
        "dist/chrome/bridge.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": ["storage"]
}
